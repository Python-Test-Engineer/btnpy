    showIfSuitable: function () {
        //Check if addon is already installed:
        if (EXTENSION.installed) return;
        //"Don't show again":
        if (storage.get('local', 'hide_tut_addon')) return;
        //Ignore Meta Quest Browser:
        if (navigator.userAgent.indexOf('OculusBrowser') > -1) return;
        //Ensure on desktop - until mobile browsers support addons:
        if (navigator.userAgent.indexOf('Android') > -1) return;
        if (browserCompat.isWebkit() && !browserCompat.isWebkitDesktop()) return;
        //Must have selected files:
        if (typeof convertList === 'undefined') return;
        //At least 1 must be image:
        var hasImages;
        for (var i = 0; i < convertList.files.length; i++)
            if (convertList.files[i].type.startsWith('image/')) hasImages = true;
        if (!hasImages) return;
        //Only show to returning visitors, not first time conversions:
        if (!storage.get('local', 'tut_addon_eligible')) {
            storage.set('local', 'tut_addon_eligible', 1);
            return;
        }

        this._fill();
        this._show();
        logEvt('addon_suggested', {
            'event_category': 'tutorials',
            'event_label': 'Suggested browser addon for image conversion'
        });
        return true;
    },

    close: function (action = 'closed') {
        this._hide();
        if (action == 'closed_forever')
            storage.set('local', 'hide_tut_addon', 1);
        logEvt('addon_' + action, { 'event_category': 'tutorials' });
    },

    _fill: function () {
        var b = 'chrome';//default
        if ('userAgentData' in navigator) {
            for (browser of navigator.userAgentData.brands) {
                if (browser.brand == 'Google Chrome')
                    b = 'chrome';
                else if (browser.brand == 'Microsoft Edge')
                    b = 'edge';
                else if (browser.brand == 'Opera')
                    b = 'opera';
            }
        } else {
            //Firefox doesn't support navigator.userAgentData yet
            if (navigator.userAgent.toLowerCase().indexOf('firefox') > -1)
                b = 'firefox';
        }

        this.dom.img.src = ROOT_FOLDER + '/img/screenshots/extension-' + b + '.webp';
        this.dom.link.href = this._browsers[b].link;
        this.dom.icBrowser.setAttribute('d', this._browsers[b].ic);
    },
    _show: function () {
        this.dom.container.style.display = '';
        setTimeout(() => {
            this.dom.container.style.transform = 'translate(-50%, 0)';
        }, 10);
    },
    _hide: function () {
        this.dom.container.style.transform = '';
        setTimeout(() => {
            this.dom.container.style.display = 'none';
        }, document.body.classList.contains('reduced-motion') ? 0 : 280);
    }
